

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= game.name %></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>

    <h1 id="dhead"><%= game.name %></h1>

    <h2 id="details">Details</h2>
    <a href="/game/<%= game._id %>/edit" id="display">Edit</a>
    <p id="display">Genre: <%= game.genre %></p>
    <p id="display">Release Date: <%= game.publishedYear %></p>
    <p id="display">Status: <%= game.status %></p>
    <form action="/game/<%= game._id %>?_method=DELETE" method="POST" id="display">
        <button type="submit" id="display">Delete Game</button>
    </form>
  </body>
</html>
